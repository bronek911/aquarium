{% extends "base.html.twig" %}

{% block body %}

    {{ item.id }} - {{ item.name }} -

    {% if entity == 'fish' %}
        {% set actionPath = 'path('waterzoo_fish_addtotank', {'id': item.id})' %}
    {% else if entity == 'decoration' %}
        {% set actionPath = 'path('waterzoo_decoration_addtotank', {'id': item.id})' %}
    {% endif %}

    <form action="{{ actionPath }}" method="POST">

        <select name="tankId">
            {% for tank in tanks %}
                <option value="{{ tank.id }}">Tank {{ tank.id }}</option>
            {% endfor %}
        </select>

        <button type="submit" class="btn btn-info btn-fill btn-wd">Add</button>

    </form>

{% endblock body %}